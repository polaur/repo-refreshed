  cd $pkgname-$pkgver
  msg "Add CCBUG 358231 & CCBUG 342056 patch" # See: https://cgit.kde.org/plasma-workspace.git/commit/?id=8227e4e2b7f034166cbf5efb01e4e715028b4606
